# Environment Variables for Tvi3W Backend

# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Connection String
# Local: mongodb://localhost:27017/tvi3w
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/tvi3w
MONGODB_URI=mongodb://localhost:27017/tvi3w

# Server Configuration
PORT=3000
NODE_ENV=development

# OAuth Credentials (Optional - for future implementation)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# JWT Secret for Authentication
JWT_SECRET=your_jwt_secret_key_here

# CORS Settings
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000
